const express = require('express');
const app = express();

// Example route
app.get('/', (req, res) => {
    res.send('Hello, World!');
});

const port = process.env.PORT || 8080;  // Use the port specified by Cloud Run
app.listen(port, '0.0.0.0', () => {
    console.log(`Server is running on port ${port}`);
});
